<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Character Name"/></h1>

      {{!-- Primary Resources --}}
      <div class="resources grid grid-3col">
        <div class="resource flex-group-center">
          <label for="system.health.value" class="resource-label">{{localize "Polaris.Header.Health"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.health.value" value="{{system.health.value}}" data-dtype="Number"/>
            <span> / </span>
            <input type="text" name="system.health.max" value="{{system.health.max}}" data-dtype="Number"/>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.power.value" class="resource-label">{{localize "Polaris.Header.Power"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.power.value" value="{{system.power.value}}" data-dtype="Number"/>
            <span> / </span>
            <input type="text" name="system.power.max" value="{{system.power.max}}" data-dtype="Number"/>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.attributes.level.value" class="resource-label">{{localize "Polaris.Header.Level"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.attributes.level.value" value="{{system.attributes.level.value}}" data-dtype="Number"/>
          </div>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="features">{{localize "Polaris.Tabs.AbilitiesSkills"}}</a>
    <a class="item" data-tab="physical">{{localize "Polaris.Tabs.Physical"}}</a>
    <a class="item" data-tab="items">{{localize "Polaris.Tabs.Items"}}</a>
    <a class="item" data-tab="spells">{{localize "Polaris.Tabs.Spells"}}</a>
    <a class="item" data-tab="description">{{localize "Polaris.Tabs.Biography"}}</a>
    <a class="item" data-tab="effects">{{localize "Polaris.Tabs.Effects"}}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Abilities & Features Tab --}}
    <div class="tab features" data-group="primary" data-tab="features">

      {{!-- Detailed Abilities Table --}}
      <div class="abilities-detailed-table">
        <table class="ability-table">
          <thead>
            <tr>
              <th class="ability-header">{{localize "Polaris.Ability"}}</th>
              {{#each system.abilities as |ability key|}}
                <th class="ability-name rollable"
                    data-roll="d20+@abilities.{{key}}.mod"
                    data-label="{{localize (lookup @root.config.abilities key)}}">
                  {{localize (lookup @root.config.abilities key)}}
                </th>
              {{/each}}
            </tr>
          </thead>
          <tbody>
            {{!-- Row 1: Basic Skill --}}
            <tr class="ability-row">
              <td class="row-label">{{localize "Polaris.AbilityTable.BasicSkill"}}</td>
              {{#each system.abilities as |ability key|}}
                <td class="ability-value">
                  <input type="number"
                         name="system.abilities.{{key}}.base"
                         value="{{ability.base}}"
                         data-dtype="Number"
                         min="0"
                         max="20"/>
                </td>
              {{/each}}
            </tr>

            {{!-- Row 2: Genetic Modifier --}}
            <tr class="ability-row">
              <td class="row-label">{{localize "Polaris.AbilityTable.GeneticModifier"}}</td>
              {{#each system.abilities as |ability key|}}
                <td class="ability-value">
                  <input type="number"
                         name="system.abilities.{{key}}.genetic"
                         value="{{ability.genetic}}"
                         data-dtype="Number"
                         min="-5"
                         max="5"/>
                </td>
              {{/each}}
            </tr>

            {{!-- Row 3: Creation Points --}}
            <tr class="ability-row">
              <td class="row-label">{{localize "Polaris.AbilityTable.CreationPoints"}}</td>
              {{#each system.abilities as |ability key|}}
                <td class="ability-value">
                  <input type="number"
                         name="system.abilities.{{key}}.creation"
                         value="{{ability.creation}}"
                         data-dtype="Number"
                         min="-5"
                         max="10"/>
                </td>
              {{/each}}
            </tr>

            {{!-- Row 4: Actual Skill (Calculated) --}}
            <tr class="ability-row actual-skill">
              <td class="row-label">{{localize "Polaris.AbilityTable.ActualSkill"}}</td>
              {{#each system.abilities as |ability key|}}
                <td class="ability-value calculated">
                  <span class="skill-value">{{ability.value}}</span>
                  <span class="skill-mod">({{numberFormat ability.mod decimals=0 sign=true}})</span>
                </td>
              {{/each}}
            </tr>

            {{!-- Row 5: Natural Aptitude --}}
            <tr class="ability-row">
              <td class="row-label">{{localize "Polaris.AbilityTable.NaturalAptitude"}}</td>
              {{#each system.abilities as |ability key|}}
                <td class="ability-value">
                  <input type="number"
                         name="system.abilities.{{key}}.aptitude"
                         value="{{ability.aptitude}}"
                         data-dtype="Number"
                         min="0"
                         max="10"/>
                </td>
              {{/each}}
            </tr>
          </tbody>
        </table>
      </div>

      {{!-- Secondary Abilities Table --}}
      <section class="secondary-abilities-section">
        <h2 class="section-title">{{localize "Polaris.SecondaryAbilities.Title"}}</h2>
        <div class="secondary-abilities-grid">

          {{!-- Shock Resistance --}}
          <div class="secondary-ability-card">
            <h3 class="secondary-title">{{localize "Polaris.SecondaryAbilities.Shock"}}</h3>
            <div class="secondary-values">
              <div class="secondary-value">
                <label>{{localize "Polaris.SecondaryAbilities.NumbnessThreshold"}}</label>
                <span class="value-display">{{system.secondaryAbilities.shock.numbnessThreshold}}</span>
                <span class="formula">(CON / 2)</span>
              </div>
              <div class="secondary-value">
                <label>{{localize "Polaris.SecondaryAbilities.UnconsciousnessThreshold"}}</label>
                <span class="value-display">{{system.secondaryAbilities.shock.unconsciousnessThreshold}}</span>
                <span class="formula">(CON)</span>
              </div>
            </div>
          </div>

          {{!-- Damage Modifier --}}
          <div class="secondary-ability-card">
            <h3 class="secondary-title">{{localize "Polaris.SecondaryAbilities.DamageModifier"}}</h3>
            <div class="secondary-values">
              <div class="secondary-value">
                <label>{{localize "Polaris.SecondaryAbilities.CAC"}}</label>
                <span class="value-display modifier">{{numberFormat system.secondaryAbilities.damageModifier.cac decimals=0 sign=true}}</span>
                <span class="formula">((FOR - 10) / 2)</span>
              </div>
            </div>
          </div>

          {{!-- Reaction --}}
          <div class="secondary-ability-card">
            <h3 class="secondary-title">{{localize "Polaris.SecondaryAbilities.Reaction"}}</h3>
            <div class="secondary-values">
              <div class="secondary-value">
                <label>{{localize "Polaris.SecondaryAbilities.ReactionValue"}}</label>
                <span class="value-display">{{system.secondaryAbilities.reaction.value}}</span>
                <span class="formula">((ADA + PER) / 2)</span>
              </div>
            </div>
          </div>

          {{!-- Damage Resistance --}}
          <div class="secondary-ability-card">
            <h3 class="secondary-title">{{localize "Polaris.SecondaryAbilities.DamageResistance"}}</h3>
            <div class="secondary-values">
              <div class="secondary-value">
                <label>{{localize "Polaris.SecondaryAbilities.BaseResistance"}}</label>
                <span class="value-display">{{system.secondaryAbilities.damageResistance.value}}</span>
                <span class="formula">(Base + Equipment)</span>
              </div>
            </div>
          </div>

          {{!-- Natural Resistance --}}
          <div class="secondary-ability-card wide">
            <h3 class="secondary-title">{{localize "Polaris.SecondaryAbilities.NaturalResistance"}}</h3>
            <div class="secondary-values multi">
              <div class="secondary-value">
                <label>{{localize "Polaris.SecondaryAbilities.Drugs"}}</label>
                <span class="value-display">{{system.secondaryAbilities.naturalResistance.drugs}}</span>
                <span class="formula">((CON + VOL) / 2)</span>
              </div>
              <div class="secondary-value">
                <label>{{localize "Polaris.SecondaryAbilities.Sickness"}}</label>
                <span class="value-display">{{system.secondaryAbilities.naturalResistance.sickness}}</span>
                <span class="formula">(CON)</span>
              </div>
              <div class="secondary-value">
                <label>{{localize "Polaris.SecondaryAbilities.Poison"}}</label>
                <span class="value-display">{{system.secondaryAbilities.naturalResistance.poison}}</span>
                <span class="formula">(CON)</span>
              </div>
              <div class="secondary-value">
                <label>{{localize "Polaris.SecondaryAbilities.Radiation"}}</label>
                <span class="value-display">{{system.secondaryAbilities.naturalResistance.radiation}}</span>
                <span class="formula">(CON)</span>
              </div>
            </div>
          </div>

          {{!-- Breath --}}
          <div class="secondary-ability-card">
            <h3 class="secondary-title">{{localize "Polaris.SecondaryAbilities.Breath"}}</h3>
            <div class="secondary-values">
              <div class="secondary-value">
                <label>{{localize "Polaris.SecondaryAbilities.BreathValue"}}</label>
                <span class="value-display">{{system.secondaryAbilities.breath.value}}</span>
                <span class="formula">((CON + VOL) / 2)</span>
              </div>
            </div>
          </div>

        </div>
      </section>

      {{!-- Luck Skill Section --}}
      <section class="luck-section">
        <div class="luck-container">
          <div class="luck-header">
            <h3 class="luck-title">{{localize "Polaris.Luck.Title"}}</h3>
            <span class="luck-subtitle">{{localize "Polaris.Luck.Subtitle"}}</span>
          </div>
          <div class="luck-content">
            <div class="luck-value-group">
              <label for="system.luck.value" class="luck-label">{{localize "Polaris.Luck.Value"}}</label>
              <input type="number"
                     name="system.luck.value"
                     value="{{system.luck.value}}"
                     data-dtype="Number"
                     min="0"
                     max="20"
                     class="luck-input"/>
            </div>
            <div class="luck-modifier">
              <span class="luck-mod-label">{{localize "Polaris.Luck.Modifier"}}</span>
              <span class="luck-mod-value">{{numberFormat system.luck.mod decimals=0 sign=true}}</span>
            </div>
            <div class="luck-roll">
              <button type="button"
                      class="luck-roll-button rollable"
                      data-roll="d20+@luck.mod"
                      data-label="{{localize 'Polaris.Luck.Check'}}">
                <i class="fas fa-dice-d20"></i>
                {{localize "Polaris.Luck.Roll"}}
              </button>
            </div>
          </div>
        </div>
      </section>

      {{!-- Skills/Features Section --}}
      <section class="features-section">
        <h2 class="section-title">Skills & Features</h2>
        {{> "systems/Polaris/templates/actor/parts/actor-features.hbs"}}
      </section>
    </div>

    {{!-- Physical Description Tab --}}
    <div class="tab physical" data-group="primary" data-tab="physical">
      {{> "systems/Polaris/templates/actor/parts/actor-physical.hbs"}}
    </div>

    {{!-- Items Tab --}}
    <div class="tab items" data-group="primary" data-tab="items">
      {{> "systems/Polaris/templates/actor/parts/actor-items.hbs"}}
    </div>

    {{!-- Spells Tab --}}
    <div class="tab spells" data-group="primary" data-tab="spells">
      {{> "systems/Polaris/templates/actor/parts/actor-spells.hbs"}}
    </div>

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="description">
      {{editor enrichedBiography target="system.biography" engine="prosemirror" button=true editable=editable}}
    </div>

    {{!-- Active Effects Tab --}}
    <div class="tab effects flexcol" data-group="primary" data-tab="effects">
      {{> "systems/Polaris/templates/actor/parts/actor-effects.hbs"}}
    </div>

  </section>
</form>
